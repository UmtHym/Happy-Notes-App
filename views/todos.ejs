<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href= "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Todo List</h1>
        <form action="/todos/createTodo" method='POST' class="form-inline my-4">
            <input type="text" placeholder="New Task" name='todoItem' class="form-control me-2">
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>
        <ul class="list-group">
            <% todos.forEach(el => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center" data-id="<%= el._id %>">
                    <% if (el.completed) { %>
                        <i class="fa-regular fa-square-check"></i>
                        <span class="completed"><%= el.todo %></span>
                    <% } else { %>
                        <i class="fa-regular fa-square"></i>
                        <span class="not"><%= el.todo %></span>
                    <% } %>
                    <div id="errorMessage" class="alert alert-danger mt-3" style="display: none;"></div>
                    <div>
                        <button class="btn btn-info btn-sm edit" data-id="<%= el._id %>">Edit</button>
                        <button class="del btn btn-danger btn-sm" data-id="<%= el._id %>">Delete</button>
                    </div>
                </li>
            <% }) %>
        </ul>
        <div class="mt-4">
            <p><strong>Tasks Left:</strong> <%= left %></p>
        </div>
       <div class="col-auto">
                <form action="/logout" method="GET">
                    <button type="submit" class="btn btn-secondary">Logout</button>
                </form>
            </div>
        </div>
    </div>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>